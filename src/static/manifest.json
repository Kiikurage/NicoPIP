{
    "manifest_version": 2,
    "name": "NicoPIP",
    "description": "ニコニコ動画にPicture-In-Picture機能を追加する拡張機能",
    "version": "0.1.0",
    "icons": {
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.nicovideo.jp/watch/*"],
            "js": ["contentScript.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "default_icon": {
            "128": "icon.png"
        },
        "default_title": "NicoPIP"
    }
}
